<h2>Register</h2>
<form action="/register" method="post">
  <% if(messages.error){ %>
  <span style="color: red"> <%= messages.error %> </span>

  <% } %>

  <div>
    <label for="user_id">User ID:</label>
    <input
      style="width: 20em"
      type="text"
      id="user_id"
      name="user_id"
      placeholder='input "2" if you have not got any from admin'
      required
    />
  </div>
  <div>
    <label for="email">Email:</label>
    <input style="width: 20em" type="email" id="email" name="email" required />
  </div>
  <div>
    <label for="password">Password:</label>
    <input
      style="width: 20em"
      type="password"
      id="password"
      name="password"
      required
    />
  </div>
  <div>
    <input type="submit" value="Register" />
  </div>
</form>
